{
  "name": "aartl-lang-server",
  "displayName": "AARTL",
  "description": "A plugin for AARTL",
  "author": "Ivan Kouznetsov",
  "license": "MIT",
  "icon": "iceCream.png",
  "version": "0.1.0",
  "publisher": "ivan-kouznetsov",
  "repository": {
    "url": "https://github.com/Ivan-Kouznetsov/aartl-vscode-extension"
  },
  "categories": [],
  "keywords": [
    "api testing"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:aartl"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "aartl",
        "aliases": [
          "Agnostic API Reliability Testing Language",
          "aartl"
        ],
        "extensions": [
          ".aartl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aartl",
        "scopeName": "source.aartl",
        "path": "./syntaxes/aartl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "aarlt configuration",
      "properties": {
        "aartlLangServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "aartlLangServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "mocha": "^8.0.1",
    "@types/node": "^12.12.0",
    "eslint": "^6.4.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^3.9.4"
  },
  "dependencies": {
    "@types/jsonpath": "^0.2.0",
    "jsonpath": "^1.0.2"
  }
}
